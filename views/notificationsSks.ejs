<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notification Project</title>
    <link rel="stylesheet" href="../public/styles/notifications.css">
</head>
<body>
    <div class="container">
        <div class="notificationContainer">
            <header>
                <div class="notificationHeader">
                    <h1>Notification</h1>
                    <span id="num-of-notif"></span>
                </div>
                <p id="mark-as-read">Mark as All Read</p>
            </header>
            <main>
                <% resultNotiNewEvent.forEach((itemNE, index) => { %>
                    <%console.log("the images from ejs")%>
                    <%console.log(images)%>

                        <% var clubName = itemNE.club_name; %>
                        <% var notificationType = itemNE.notificationType%>
                        <% var notifID = parseInt(itemNE.notify_id); %>
                        <% var divId='button_' + itemNE.notify_id; %>

                        <%if(itemNE.status_notification == 0){%>
                            <form id="readNotificationFormNewEvent" action="/changeNotificationStatusNewEvent?notifID=<%= notifID%>" method="POST">
                                <div class="notificationCard unread read-notification" id="<%= divId %>">
                                    <img src="../public/images/<%=images[index]%>"/>
                                    <div class="description">
                                        <p>Your Have a new Create Event Request From "<%=clubName%>"</p>       
                                    </div>
                                </div>
                            </form>
                        <%}%>
                <%})%> 
                
                        
               
                
            </main>
        </div>
    </div>
    <script src="../public/scripts/notificationsSks.js"></script>
</body>
</html>