<script>
    // Select the search button and search bar
    let searchBtn = document.querySelector('#search-btn');
    let searchBar = document.querySelector('.search-bar-container');

    // Select all event names
    let eventNames = document.querySelectorAll('.event-name');

    // Add click event listener to the search button
    searchBtn.addEventListener('click', () => {
        // Toggle search button icon
        searchBtn.classList.toggle('fa-times');

        // Toggle search bar visibility
        searchBar.classList.toggle('active');
    });

    // Add keyup event listener to the search input
    searchBar.addEventListener('keyup', (event) => {
        let searchText = event.target.value.trim().toLowerCase(); // Trim leading/trailing spaces

        // Iterate through each event name and hide/show based on search text
        eventNames.forEach((eventName) => {
            let textContent = eventName.textContent.trim().toLowerCase(); // Trim leading/trailing spaces
            if (textContent.startsWith(searchText)) {
                eventName.parentNode.parentNode.style.display = 'block';
            } else {
                eventName.parentNode.parentNode.style.display = 'none';
            }
        });
    });
</script>

