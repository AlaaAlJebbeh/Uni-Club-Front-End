<section class="container">
    <header>Create Club</header>
    <form action="#" class="form">
      <div class="input-box">
        <label style="font-size: medium;" >Club Name</label>
        <input type="text" placeholder="Enter club name" required />
      </div>
  
  
      <div class="gender-box">
        <h3 style="font-size: medium; font-weight: bold;">Category</h3>
        <div class="gender-option">
          <div class="gender">
            
            <label for="category" style="font-size: medium;" >
              </label>
              <select id="category" name="cars" required>
                  <option value="entertainment">Choose</option>
                  <option value="science">Science</option>
                  <option value="engineering">Engineering</option>
                  <option value="art">Art</option>
              </select>
            
          </div>
        </div>
      </div>
  
      <div class="input-box address">
        <label style="font-size: medium; ">Manager Info</label>
        <input type="text" placeholder="Enter manager info" required />
      </div>
  
        <div class="input-box">
          <label style="font-size: medium;" >Manager ID</label>
          <input type="text" inputmode="numeric" pattern="[0-9]*" placeholder="Enter manager ID" required />
          <span class="error-message" style="color: red; display: none;">Please enter only numbers.</span>
        </div>
  
        <div class="input-box">
          <label style="font-size: medium;" >Password</label>
          <input type="password" placeholder="Enter password" required />
        </div>
  
        <div class="input-box address">
          <label style="font-size: medium;" >Name</label>
          <input type="text" placeholder="Enter Manager Name" required />
        </div>
  
        <div class="input-box">
  <label style="font-size: medium;">Email Address</label>
  <input type="text" id="email" placeholder="Enter email address" required />
  <span class="error-message" style="color: red; display: none;">Please enter a valid email address.</span>
  </div>
  
  
      <button>Submit</button>
      <button>Cancel</button>
    </form>
  </section>
      


